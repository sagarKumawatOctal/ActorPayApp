<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/my_oder_bg">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLogin"
        style="@style/BoldTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:letterSpacing="0.01"
        android:padding="@dimen/_2sdp"
        android:text="What Is an Order ID Number?"
        android:textColor="@color/black"
        tools:ignore="RelativeOverlap,UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStatus"
        style="@style/RegularTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:background="@drawable/my_oder_status_bg"
        android:letterSpacing="0.01"
        android:padding="@dimen/_5sdp"
        android:text="Completed"
        android:textColor="@color/green_color"
        android:textSize="10sp"
        tools:ignore="RelativeOverlap,UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDetails"
        style="@style/LightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLogin"
        android:layout_gravity="center"
        android:letterSpacing="0.01"
        android:padding="@dimen/_2sdp"
        android:text="Amount: $1500 Order Id: 044521563  Provider: ABC 21, 2021 02:00PM"
        android:textColor="@color/text_color"
        android:textSize="10dp"
        tools:ignore="RelativeOverlap,UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDescription"
        style="@style/LightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDetails"
        android:layout_gravity="center"
        android:letterSpacing="0.01"
        android:padding="@dimen/_2sdp"
        android:text="An Order ID is the unique number associated with every order placed through
our secure checkout. This is the number you'll use to reference a specific
purchase, should you need assistance after placing the order."
        android:textColor="@color/black"
        android:textSize="10sp"
        tools:ignore="RelativeOverlap,UnusedAttribute" />


</RelativeLayout>