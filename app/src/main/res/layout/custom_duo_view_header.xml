<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cirImvProfilePic"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:elevation="@dimen/_5sdp"
        android:src="@drawable/demo"
        app:civ_border_color="@color/gray_dark"
        app:civ_border_width="@dimen/_1sdp" />

    <TextView
        android:id="@+id/duo_view_header_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/_28sdp"
        android:layout_toRightOf="@+id/cirImvProfilePic"
        android:fontFamily="@font/poppins_semibold"
        android:text="Jorden Nielsen"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <TextView
        android:text="Account Balance"
        android:id="@+id/txtAccountBal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/cirImvProfilePic"
        android:layout_below="@+id/duo_view_header_text_title"
        android:fontFamily="@font/poppins_regular"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/gray_dark"
        android:textSize="12sp" />

    <View
        android:id="@+id/duo_view_header_border"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/cirImvProfilePic"
        android:layout_marginTop="12dp"
        android:background="@android:color/white"
        android:visibility="invisible" />
</RelativeLayout>